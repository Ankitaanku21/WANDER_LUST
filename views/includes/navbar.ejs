<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
    font-size: 0.95rem;
    transition: background-color 0.3s ease;
  }
  .search-btn:hover {
    background-color: #e63c46;
    color: #fff;
  }
  .search-btn i {
    display: inline;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 0.95rem;
    width: 250px;
    max-width: 50vw;
    transition: width 0.3s ease;
  }

  /* Large screens */
  @media (min-width: 992px) {
    .search-inp {
      width: 350px;
    }
    .navbar-nav .nav-link {
      margin-left: 1rem;
      margin-right: 1rem;
    }
  }

  /* Medium screens */
  @media (max-width: 768px) {
    .search-inp {
      width: 150px;
      font-size: 0.85rem;
    }
    .search-btn span {
      display: none; /* hide "Search" text */
    }
    .search-btn {
      padding: 0.4rem 0.6rem;
    }
  }

  /* Small screens */
  @media (max-width: 576px) {
    .search-inp {
      width: 120px;
      font-size: 0.8rem;
    }
  }

  /* Fullscreen Sidebar */
  .offcanvas-fullscreen {
    width: 100% !important;
    max-width: 100% !important;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Brand -->
    <a class="navbar-brand m-2" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>



    <!-- Search bar -->
   <!-- Large screens only -->
    <div class="d-none d-lg-flex justify-content-center w-100">
      <form class="d-flex text-center" action="/listings/search" method="GET">
        <input name="query" class="form-control me-2 search-inp" type="search" placeholder="Search your destinations" aria-label="Search">
        <button class="btn search-btn d-flex align-items-center" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
          <span class="ms-2">Search</span>
        </button>
      </form>
    </div>

    <!-- Small screens only -->
    <div class="d-flex d-lg-none justify-content-start">
      <form class="d-flex mx-auto text-center" action="/listings/search" method="GET">
        <input name="query" class="search-inp mb-2" type="search" placeholder="Search" style="width:120px; margin:0.5px; font-size:0.8rem;">
        
        <button class="btn search-btn d-flex align-items-center justify-content-center" type="submit" 
                style="width:35px; height:35px; padding:0; margin:2px; font-size:0.9rem; border-radius:50%;">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>

    <!-- Sidebar Toggle (Mobile) -->
    <button class="navbar-toggler ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Offcanvas Sidebar (fullscreen for small screens) -->
    <div class="offcanvas offcanvas-end offcanvas-fullscreen" tabindex="-1" id="sidebarMenu">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav text-start  ms-auto">
          <li class="nav-item mb-2 me-3">
            <a class="nav-link fs-5" href="/listings/new">Add new Listing</a>
          </li>
          <% if(!currUser){ %>
            <li class="nav-item mb-3 me-3">
              <a class="btn btn-outline-dark w-100" href="/signup"><b>Sign Up</b></a>
            </li>
            <li class="nav-item mb-3 me-3">
              <a class="btn btn-outline-dark w-100" href="/login"><b>Log In</b></a>
            </li>
          <% } %>
          <% if(currUser) { %>
            <li class="nav-item mb-2">
              <a class="btn btn-danger w-100" href="/logout"><b>Log Out</b></a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>

  </div>
</nav>

