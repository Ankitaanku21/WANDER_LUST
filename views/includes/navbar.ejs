<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 0.8rem;
    font-size: 0.9rem;
  }
  .search-btn:hover {
    background-color: #e63c46;
    color: #fff;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.3rem 1rem;
    font-size: 0.9rem;
    width: 200px; /* default */
    max-width: 60vw; /* shrink dynamically */
    transition: width 0.3s ease;
  }

  /* Large screens â†’ more spacious search bar */
  @media (min-width: 992px) {
    .search-inp {
      width: 350px;
    }
    .navbar-nav .nav-link {
      margin-left: 1rem;
      margin-right: 1rem;
    }
  }

  /* Medium screens */
  @media (max-width: 768px) {
    .search-inp {
      width: 140px;
      font-size: 0.8rem;
    }
    .search-btn {
      font-size: 1rem;
      padding: 0 0.6rem;
    }
  }

  /* Small screens */
  @media (max-width: 576px) {
    .search-inp {
      width: 120px;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Search Bar -->
    <form class="d-flex mx-auto flex-grow-1 justify-content-center" action="/listings/search" method="GET">
      <input name="query" class="form-control me-2 search-inp" type="search" placeholder="Search..." aria-label="Search">
      <button class="btn search-btn d-flex align-items-center" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>

    <!-- Sidebar Toggle -->
    <button class="navbar-toggler ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Offcanvas Sidebar -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="sidebarMenu">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav">
          <li class="nav-item" style="font-size:1.2rem">

            <a class="nav-link" href="/listings/new">Add new Listing</a>
          </li>
          <% if(!currUser){ %>
            <li class="nav-item">
              <a class="btn btn-outline-dark w-100 my-2" href="/signup"><b>Sign Up</b></a>
            </li>
            &nbsp; &nbsp; &nbsp; &nbsp;
            <li class="nav-item">
              <a class="btn btn-outline-dark w-100 my-2" href="/login"><b>Log In</b></a>
            </li>
          <% } %>
          <% if(currUser) { %>
            <li class="nav-item">
              <a class="btn btn-danger w-100 my-2" href="/logout"><b>Log Out</b></a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>

  </div>
</nav>
