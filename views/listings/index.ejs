<% layout("layouts/boilerplate") %>

<style>
    .filter {
        text-align: center;
        opacity: 0.7;
    }
    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }
    .filter p {
        font-size: 0.8rem;
    }
    .tax-info {
        display: none;
    }
    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.5rem;
        padding: 1rem;
        margin-top: 1rem;
        display: flex;
        align-items: center;
    }
</style>

<div class="filters-container mt-3">
    <!-- Button to toggle filters -->
    <button class="btn btn-outline-dark w-100 mb-2" id="toggleFilters">
        <i class="fa-solid fa-sliders"></i> Filters
    </button>

    <!-- Filters section (hidden by default) -->
    <div id="filters" class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-3 d-none">
        <% const categories = [
            { icon: "fa-fire", name: "Trending" },
            { icon: "fa-bed", name: "Rooms" },
            { icon: "fa-mountain-city", name: "Iconic Cities" },
            { icon: "fa-mountain", name: "Mountain" },
            { icon: "fa-house-chimney", name: "Castles" },
            { icon: "fa-person-swimming", name: "Amazing pools" },
            { icon: "fa-campground", name: "Camping" },
            { icon: "fa-building-wheat", name: "Farms" },
            { icon: "fa-snowflake", name: "Arctic" },
            { icon: "fa-umbrella-beach", name: "Beach" },
            { icon: "fa-ship", name: "Boats" },
        ]; %>

        <% categories.forEach(cat => { %>
            <div class="filter text-center" data-category="<%= cat.name %>">
                <div><i class="fa-solid <%= cat.icon %> fa-2x"></i></div>
                <p><%= cat.name %></p>
            </div>
        <% }) %>

        <!-- Tax toggle inside filters section -->
        <div class="col-12">
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">
                        Display total after Taxes
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Show message if listings array is empty -->
<% if (message) { %>
    <h3 class="text-center text-danger mt-4"><%= message %></h3>
<% } %>

<!-- Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let listing of listings) { %>
        <a href="/listings/<%= listing._id %>" 
           class="listing_link text-decoration-none" 
           data-category="<%= listing.category %>">
           
            <div class="card col listing-card w-100 w-md-auto mb-4 rounded-3 shadow-sm">
                <img src="<%= listing.image.url %>" 
                     class="card-img-top rounded-top-3" 
                     style="height:20rem; object-fit: cover;">
                     
                <div class="card-body">
                    <p class="card-text mb-2">
                        <b><%= listing.title %></b><br>
                        &#8377; <%= listing.price %> / night
                        <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                    </p>
                    <!-- Review & rating -->
                    <% if (listing.rating) { %>
                        <p class="text-warning mb-0">
                            ‚≠ê <%= listing.rating %>/5
                            (<%= listing.reviewsCount || 0 %> reviews)
                        </p>
                    <% } %>
                </div>
            </div>
        </a>
    <% } %>
</div>


<script>
    // Toggle filters visibility
    document.getElementById("toggleFilters").addEventListener("click", () => {
        document.getElementById("filters").classList.toggle("d-none");
    });

    // Toggle tax info
    document.getElementById("switchCheckDefault").addEventListener("click", () => {
        const taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            info.style.display = info.style.display !== "inline" ? "inline" : "none";
        }
    });

    // Filter by category name
    document.querySelectorAll(".filter").forEach(filter => {
        filter.addEventListener("click", () => {
            const categoryName = filter.getAttribute("data-category");
            window.location.href = `/listings?category=${encodeURIComponent(categoryName)}`;
        });
    });
</script>
