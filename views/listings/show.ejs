<% layout("layouts/boilerplate") %>
<div class="row">
    <!-- Title -->
    <div class="col-8 offset-2 mt-3">
        <h3 class="mb-3"><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-2 show-card listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" >
            <div class="card-body">
            <p class="card-text">
                <i> <b>Owned by- </b> <%= listing.owner.username %></i> <br>
                <b>Description:</b> <%= listing.description %> <br>
                <b>Price:</b> &#8377; <%= listing.price %>  <br>
                <b>Location:</b> <%= listing.location %> <br>
                <b>Country:</b> <%= listing.country %> <br>
                <b>Category:</b> <%= listing.category %>
             </p>
        </div>
    </div>

    <!-- Edit / Delete Buttons -->
    <% if(currUser && currUser._id.equals(listing.owner._id)) {  %>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>
        
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>
    <% } %> 

    <!-- Review Section -->
    <div class="col-8 offset-2 mb-5">
        <% if(currUser) { %> 
            <hr>
            <h4 class="mb-3">Leave a Review</h4>
            <!-- Review -->
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                <!-- Rating -->
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                </div>

                <!-- Comment Box -->
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" rows="5" cols="15" class="form-control rounded-3" required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
        <% } %>

        <!-- All Reviews -->
        <% if(listing.reviews.length > 0) { %>
            <div class="row">
                <p><b>All Reviews</b></p>
                <% for(review of listing.reviews) { %>
                    <div class="card col-12 col-md-5 ms-md-3 mb-3 shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="card-title mb-2"><%= review.author.username %></h5>
                            <p class="starability-result card-text mb-2" data-rating="<%= review.rating %>"></p>
                            <p class="card-text"><%= review.comment %></p> 
                            <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" class="mb-3" method="POST">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>
</div>
